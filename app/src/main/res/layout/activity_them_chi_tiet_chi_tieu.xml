<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anhnen4"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ThemXoaSua_LietKeThongKe.ThemChiTietChiTieu">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="343dp"
        android:layout_margin="-2dp">

        <TableRow>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/tien">

            </ImageView>

            <EditText
                android:id="@+id/txtSoTien_ThemCTCT"
                android:layout_width="290dp"
                android:layout_height="70dp"
                android:background="@drawable/custom_textbox"
                android:hint="Nhập số tiền...."
                android:textSize="30dp"
                android:textStyle="bold">

            </EditText>
        </TableRow>

        <TableRow>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/note">

            </ImageView>

            <EditText
                android:id="@+id/txtTenCTCT_ThemCTCT"
                android:layout_width="290dp"
                android:layout_height="70dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:hint="Nhập tên chi tiết tiêu"
                android:background="@drawable/custom_textbox">

            </EditText>
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/imChonNgay_ThemCTCT"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/chonngay">

            </ImageView>

            <EditText
                android:id="@+id/txtChonNgay_ThemCTCT"
                android:layout_width="290dp"
                android:layout_height="70dp"
                android:width="20dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:height="80dp"
                android:hint="Ngày thành lập..."
                android:text=""
                android:background="@drawable/custom_textbox">

            </EditText>

        </TableRow>

        <TableRow>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/ground">

            </ImageView>

            <EditText
                android:textColor="@color/yellow2"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="hiện lên nài"
                android:id="@+id/txtTenNhomCTCT_ThemCTCT"
                android:layout_width="290dp"
                android:layout_height="70dp"
                android:background="@drawable/custom_textbox">

            </EditText>
        </TableRow>

        <TableRow>


        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="229dp"></LinearLayout>
    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton

        android:id="@+id/btnXacNhan_ThemCTCT"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_button2"
        android:gravity="center"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="50"
        android:text="Xác nhận"></br.com.simplepass.loading_button_lib.customViews.CircularProgressButton>

    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/btnThoat_ThemCTCT"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_button2"
        android:gravity="center"
        android:onClick="onClick"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="50"
        android:text="Thoát"
        tools:ignore="OnClick"></br.com.simplepass.loading_button_lib.customViews.CircularProgressButton>


</LinearLayout>